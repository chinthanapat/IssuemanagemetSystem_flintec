                    <option>Quality Isuue</option>
                </select>
            </div>
        </div>
            <div class="col-4">
                <button class="btn btn-primary glyphicons-chevron-left" style="margin-top:10px;" data-toggle="modal" data-target="#modal1"><i class="fas fa-user-plus"></i> Add a person</button>
