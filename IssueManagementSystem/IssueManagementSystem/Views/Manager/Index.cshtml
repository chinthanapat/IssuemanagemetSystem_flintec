
@{
    ViewBag.Title = "Index";

}

@model IssueManagementSystem.Models.User_tbl
<h2>Index</h2>

@using (Html.BeginForm("sms", "Manager", FormMethod.Post))
{
    <div class="col-lg-12">
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Username" })
    </div>
    <div class="col-lg-12">
        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = "Username" })
    </div>
    <button type="submit" class="btn btn-default btn-block btn-custom" value="Login">Login</button>
}