
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/BranchSideNav.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<link href="~/Content/adminstyles/select2-min.css" rel="stylesheet" />
<link href="~/Content/adminstyles/Settings.css" rel="stylesheet" />
<div id="page-wrapper" class="container"  style="padding-top:50px;position:absolute">

    <div class="row select-margins">
        <div class="col-lg-4">
            <h1 class="page-header" >Settings</h1>
            <h3 style="margin-top:-10px;" class="page-header textalline-center">Create New Line</h3>
            <div class="col-lg-12">
                <div class="row">

                    <div class="col-lg-4">
                        <label for="selectdepartment"> Department</label>
                    </div>
                    <div class="col-lg-8">
                        <select class="js-example-placeholder-single js-states form-control" id="selectdepartment" name="selectdepartment">
                            <option></option>
                            <option>Assembly</option>
                            <option>Machining</option>
                            <option>IT</option>
                            <option>Engineering</option>
                            <option>Maintenance</option>
                        </select>
                    </div>
                </div>
                <div class="row" style="margin-top:20px;">
                    <div class="col-lg-4">
                        <label for="selectline"> Line</label>
                    </div>
                    <div class="col-lg-8">
                        <select class="js-example-placeholder-single js-states form-control" id="selectline" name="selectline">
                            <option></option>
                            <option>Potted</option>
                            <option>Welder</option>
                            <option>SM</option>
                            <option>Guaging</option>
                            <option>Rocker</option>
                            <option>MD2</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row" style="margin-top:130px;width:70%;margin-left:10%">
                <label for="raspberrypi_ip">Raspberry-Pi Module IP Address</label>
                <input type="text" id="raspberrypi_ip" name="raspberrypi_ip" class="form-control" />

            </div>

            <div class="row" style="margin-top:30px;margin-left:10%">

                <button class='btn btn-success' id="saveMap" style="margin:auto">Save Created Line</button>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="row">
            <!--    <button class='btn btn-success' data-target='#modal1' data-toggle='modal'>Draw New Map</button> -->
            </div>
            <div class="row">
                <div class="container">
                    <div class="row" style="margin-top:40px;">
                        <div class="col-lg-4" >
                            <label>Floor Map</label>
                            <canvas id="canvas1" style="border: 1px solid black;" width="400" height="600">
                                <br>
                                This text is displayed if your browser does not support HTML5 Canvas.<br>
                            </canvas>

                        </div>
                        <div class="col-lg-3">

                            <div class="container" style="margin-left:10px">

                                <div class="row">
                                    <div class="col-lg-2">
                                        <label for="h">Machine</label>
                                        <select class="js-example-placeholder-single js-states form-control" id="machineSelectBox" name="machineSelectBox">
                                            <option></option>
                                                @{
                                                    for (var i = 10; i < 21; i++)
                                                    {
                                                        <option>Machine @i</option>
                                                    }
                                                 }
                                        </select>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-1">
                                        <label for="w">Width</label>
                                        <input id="w" anme="w" class="form-control" placeholder="width" value="50">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-1">
                                        <label for="h">Height</label>
                                        <input id="h" name="h" class="form-control" placeholder="height" value="50">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-1">
                                        <label for="color">Color</label>
                                        <input id="color" name="color" class="jscolor form-control " value="ab2567" style="">
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                    <div class="col-lg-2">
                                        <button id="addNewShapeButton" class="btn btn-primary">Add</button>
                                        <button id="deleteBox" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                                <p>Selected MAchine: <span id="elementID"></span></p>
                                <!--   <button id="colorButton">Color</button>  -->
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>

