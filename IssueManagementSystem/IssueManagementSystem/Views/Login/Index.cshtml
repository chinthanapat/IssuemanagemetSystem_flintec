
@{
    ViewBag.Title = "Index";

}

@model IssueManagementSystem.Models.User
    @{ 
        Layout = null;
    }
<link href="@Url.Content("~/Content/3.3.0bootstrap.min.css")" rel="stylesheet">
<script src="@Url.Content("~/Scripts/jquery-1.11.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
<link href="@Url.Content("~/Content/login.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/login.js")"></script>
<img src="~/Content/images/background.jpg" style="width:100%;height:100%;" />
<meta name="viewport" content="width=device-width"/>

    <div class="container">

        <div id="login-box" style="margin-top:10%;">
            @using (Html.BeginForm("Autherize","Login" ,FormMethod.Post))
            {
                <div class="logo">
                    <img src="~/Content/images/flinteclogo.png" class="img img-responsive img-circle center-block" style="width:25%;height:12%" />

                    <h1 class="logo-caption"><span class="tweak">L</span>ogin</h1>
                </div><!-- /.logo -->
                <div class="controls">
                        <div class="col-lg-5">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Username" })
                        </div>
                        <div class="col-lg-5">
                            @Html.TextBoxFor(model => model.PassWord, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                        </div>
                        <div class="col-lg-5">
                            @Html.ValidationMessageFor(model => model.UserName)
                            @Html.ValidationMessageFor(model => model.PassWord)
                        </div>

                            <button type="button" class="btn btn-default btn-block btn-custom" onclick="@("window.location.href='" + @Url.Action("selectIssue", "Supervisor") + "'");">Login</button>
                        </div><!-- /.controls -->
                        }

                    </div><!-- /#login-box -->

    </div><!-- /.container -->


<div id="particles-js"></div>

