@{
    ViewBag.Title = "MaterialDelay";
    Layout = "~/Views/Shared/supervisorsLayout.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }


    ViewBag.rol = Session["Role"];
    int userID = (int)Session["userID"];// get current supervisorID
    dynamic mat_List = new System.Dynamic.ExpandoObject();

    using (issue_management_systemEntities1 db = new issue_management_systemEntities1()) //method for load the map acordinto the surevisor line
    {
        mat_List.issue_occurrence = db.issue_occurrence;
        var lineInfo = db.line_supervisor.Where(x => x.supervisor_emp_id == userID).FirstOrDefault();
        ViewBag.lineID = lineInfo.line_line_id;
    }
    int lineId = ViewBag.lineID;
}

@using IssueManagementSystem.Models

<link href="~/Content/SupervisorStyles/supervisorStyle.css" rel="stylesheet" />
<link href="~/Content/googlegrafics.css" rel="stylesheet" />
<link href="~/Content/adminstyles/select2-min.css" rel="stylesheet" />
<link href="~/Content/adminstyles/Settings.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<h2>Material Delay</h2>
<hr />
<div class="container" style="margin-top:30px;">
    <div class="row">
        <div class="" style="width:50%;margin:auto;">

            <div class="form-group" style="width:100%;margin:auto">
                <div id="groupsdiv">
                    <label for="exampleFormControlTextarea1" style="margin-top:5%">Select Group</label>
                    <select class="js-example-placeholder-single js-states form-control" id="groups" name="Material" style="width:100%;" onchange="">
                        <option></option>
                        <option value="1">Group01</option>
                        <option value="2">Group02</option>
                        <option value="3">Group03</option>
                        <option value="4">Group04</option>
                        <option value="5">Group05</option>
                        <option value="6">Group06</option>
                        <option value="7">Group07</option>
                        <option value="8">Group08</option>
                        <option value="9">Group09</option>
                        <option value="10">Group10</option>
                    </select>
                </div>

                <span id="lineID" style="display:none">@lineId</span>

                <label style="margin-top:5%">Select job card</label>

                <select class="js-example-placeholder-single js-states form-control" id="jobCardSelectBox" style="width:100%" onchange="loadMaterialList()">
                    <option></option>
                    @foreach (var j in Model.jobCards)
                    {
                        <option value="@j.Prod_Order_No_">@j.Prod_Order_No_    &nbsp;- &nbsp;&nbsp; @j.Description </option>
                    }
                </select>

                <label style="margin-top:5%">Select material</label>
                <select class="js-example-placeholder-single js-states form-control" id="materialSelectBox" style="width:100%">
                    <option></option>
                </select>


                <div style="padding-top:20px;">
                    <label for="exampleFormControlTextarea1">Description</label>
                    <textarea class="form-control" rows="5" id="description" style="resize: both;width:100%;"></textarea>
                </div>
                <div class="button-holder" style="display:block;margin-top:-50px;">
                    <div class="ajax-button">
                        <div class="fa fa-check done"></div>
                        <div class="fa fa-close failed"></div>
                        <input id="submit" class="submit" type="button" value="Submit" onclick="SubmitMaterialDelay()" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script src="~/Scripts/AdminScripts/jscolar.js"></script>
<script src="~/Scripts/AdminScripts/select2-min.js"></script>
<script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
<script src="~/Scripts/SupervisorScripts/machineBrakedown.js"></script>
<script src="~/signalr/Hubs"></script>
<script>
     if('@Session["department"]'!='MachineShop')
    {
    $('#groupsdiv').hide()
    }
    $(document).ready(function () {
        $("#materialSelectBox").prop("disabled", true);
    });

    function loadMaterialList() {
        var selectedJobCard = document.getElementById("jobCardSelectBox").value;
        $.ajax({
            type: "POST",
            dataType: 'text',
            url: "/CellEngineer/loadMaterialList",
            data: { selectedJobCard: selectedJobCard },
            success: function (feedback) {
                feedback = JSON.parse(feedback);
                var materialSelectBox = document.getElementById("materialSelectBox");
                materialSelectBox.options.length = 0;
                var opt1 = document.createElement('option');
                opt1.innerHTML = '';
                opt1.value = '';
                materialSelectBox.appendChild(opt1);

                for (var i = 0; i < feedback[0].Value.length; i++) {
                    var opt = document.createElement('option');
                    opt.innerHTML = feedback[0].Value[i].Item_No_;
                    opt.value = feedback[0].Value[i].Item_No_;
                    materialSelectBox.appendChild(opt);
                }

            },
            error: function () {
                alert("Error occurred");
            }
        });

        if (selectedJobCard != null) {
            $("#materialSelectBox").prop("disabled", false);
        }
    }


    $('select').select2({
        placeholder: "Select.....",
        allowClear: false
    });
     $('#groups').select2({
        placeholder: "Select Group.....",
        allowClear: false
    });
      if('@Session["department"]'!='MachineShop')
    {
    $('#groupsdiv').hide()
    }
    function SubmitMaterialDelay() {

        obj = new Object();

        obj.issue_date = new Date();
        obj.material_id = document.getElementById("materialSelectBox").value;
        obj.description = document.getElementById("description").value;
        obj.line_line_id = document.getElementById("lineID").innerText;
        obj.issue_issue_ID = "2";
        obj.responsible_person_emp_id = "";
        obj.issue_satus = "0";
        obj.location =  '@Session["location"]';
        obj.responsible_person_confirm_status = "0";
        obj.group=document.getElementById("groups").value
        obj.material = $('#Material').find(":selected").text();
        var obj_array = new Array();
        obj_array.push(obj);

        var issueJson = JSON.stringify(obj_array);
         var url = '@Url.Action("AddMaterialDelay", "Supervisor")'
        $.ajax({
            type: "POST",
            dataType: 'text',
            url: url,
            data: { issueJson: issueJson },
            success: function (feedback) {
            $.connection.hub.start()//Refresh Screen
                .done(function () {
                 console.log("Worked")
                 $.connection.ismHub.server.announce();
              }).fail(function () { alert("Can't Refresh Your Line Screen! Plese Inform IT Department!") });


              window.location.href = '@Url.Action("selectIssue", "Supervisor")'; //return to dashbord
            },
            error: function (feedback) {
                alert(feedback);
            }
        });
    }
</script>



